{
  "compilerOptions": {
    "target": "ES2019",                          
    "module": "commonjs",                     
    "lib": ["ES2019"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "removeComments": true,                
    "typeRoots": [
      "./node_modules/@types",
      "./@types/index.d.ts"
    ],                          
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*"
  ]
}